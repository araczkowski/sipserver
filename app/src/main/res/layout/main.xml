<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@id/button_start"
            android:onClick="startAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:width="76.0dip"  
            />
        <Button android:layout_gravity="center_horizontal" android:onClick="stop" android:id="@id/button_stop" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Stop" android:width="76.0dip"
            style="?android:attr/buttonBarButtonStyle" />
        <Button android:id="@id/button_status" android:onClick="status" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Status" android:width="76.0dip"
            style="?android:attr/buttonBarButtonStyle" />
        <Button android:id="@id/button_register" android:onClick="register" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Register" android:width="76.0dip"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/button_configure_sip" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Configure" android:width="90.0dip" android:onClick="configer"/>
        <CheckBox android:id="@id/checkbox_siplog" android:onClick="sipLog" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="sip_log" />
        <TextView android:textAppearance="?android:textAppearanceMedium" android:id="@id/textView1" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text=" " />
        <CheckBox android:id="@id/checkbox_registerlog" android:onClick="registerLog" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="register_log" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"/>

    <TextView
        android:id="@id/text_console"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:text="Console"
        android:textColor="@color/drakgray"
        />
</LinearLayout>